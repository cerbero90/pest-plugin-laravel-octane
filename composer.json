{
    "name": "cerbero/pest-plugin-laravel-octane",
    "type": "library",
    "description": "Pest plugin to test Laravel applications powered by Octane.",
    "keywords": [
        "laravel",
        "octane",
        "laravel-octane",
        "pest",
        "test",
        "testing"
    ],
    "homepage": "https://github.com/cerbero90/pest-plugin-laravel-octane",
    "license": "MIT",
    "authors": [{
        "name": "Andrea Marco Sartori",
        "email": "andrea.marco.sartori@gmail.com",
        "homepage": "https://github.com/cerbero90",
        "role": "Developer"
    }],
    "require": {
        "php": "^8.0",
        "cerbero/octane-testbench": "^1.0",
        "pestphp/pest-plugin": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=9.3",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "files": ["src/Autoload.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Cerbero\\PestPluginLaravelOctane\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=PSR12 src tests",
        "fix-style": "phpcbf --standard=PSR12 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
